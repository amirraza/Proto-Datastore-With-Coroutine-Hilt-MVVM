<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/showJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16sp"
        android:padding="30dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/clearJobBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Job"
        android:layout_below="@+id/showJob"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/showSettingMsgBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="View Message from Setting Proto Datastore"
        android:layout_below="@id/clearJobBtn"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>